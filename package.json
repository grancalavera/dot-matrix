{
  "name": "dot-matrix-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/client",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:all": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "test": "npm run test --workspace=packages/client",
    "test:ui": "npm run test:ui --workspace=packages/client",
    "test:headed": "npm run test:headed --workspace=packages/client"
  },
  "devDependencies": {
    "typescript": "5.7.2"
  }
}
